= form_for @memory do |f|
  - if @memory.errors.any?
    #error_explanation
      %h2= "#{pluralize(@memory.errors.count, "error")} prohibited this memory from being saved:"
      %ul
        - @memory.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :priority
    = f.text_field :priority
  .actions
    = f.submit 'Save'
